{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "native-build",
            "detail": "Build project with native dev system (xcodebuild/MSBuild)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "windows": {
                "type": "shell",
                "command": "msbuild",
                "args": [
                    "-property:GenerateFullPaths=true,Platform=x86",
                    "-t:build",
                    "-consoleloggerparameters:NoSummary"
                ],
                "problemMatcher": "$msCompile"
            },
            "osx": {
                "type": "shell",
                "command": "xcodebuild",
                "args": [
                    "-scheme", "build-then-link",
                    "-configuration", "Debug",
                    "-verbose"
                ]
                // "problemMatcher": ""
            }
        },
        {
            "group": "none",
            "label": "Clean",
            "detail": "Clean build directories",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "windows": {
                "type": "shell",
                "command": "msbuild",
                "args": [
                    "-t:clean"
                ]
            },
            "osx": {
                "type": "shell",
                "command": "xcodebuild",
                "args": [
                    "-scheme", "build-then-link",
                    "-configuration", "Debug",
                    "-verbose",
                    "clean"
                ]
            },
            "problemMatcher": []
        }
    ]
}